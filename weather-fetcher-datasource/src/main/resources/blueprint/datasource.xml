<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
           xsi:schemaLocation="
             http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
             "
           default-activation="lazy">

    <cm:property-placeholder persistent-id="org.hibernate.database"
                             update-strategy="reload">
    </cm:property-placeholder>

    <bean id="dataSource" class="javax.sql.DataSource">

        <property name="driverClassName" value="org.mariadb.jdbc.Driver"/>
        <property name="url" value="jdbc:mariadb://localhost/weather"/>
        <property name="user" value="admin"/>
        <property name="password" value="password"/>

    </bean>


    <service interface="javax.sql.DataSource" ref="dataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="weather"/>
        </service-properties>

    </service>

</blueprint>
